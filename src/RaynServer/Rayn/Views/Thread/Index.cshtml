@model ThreadViewModel
@{
    ViewData["Title"] = "Thread";
}

@*
    ここで表示するもの
    1. 視聴者に共有するID
    2. スレッドID
*@

<section class="hero is-fullheight is-light ">
    <div class="hero-body">
        <div class="container">

            @if (Model is null)
            {
                <h4 class="title">新規スレッドの作成に失敗しました。</h4>
                <h4 class="subtitle">初めからやり直してください。</h4>
                return;
            }

            <h4 class="title">新規スレッド名: @Model.ThreadTitle</h4>
            <h4 class="subtitle">開催予定日: @Model.BeginningDate.ToString("yyyy/MM/dd")</h4>
            <div class="box">
                <h4 class="title">参加者用URL</h4>
                <article class="message is-primary">
                    <div class="message-header">
                        視聴者に共有してください。
                    </div>
                    <div class="message-body">
                        @Model.ThreadUrl
                    </div>
                </article>
            </div>
            <div class="box">
                <h4 class="title">クライアント接続用URL</h4>
                <article class="message is-primary">
                    <div class="message-header">
                        クライアントアプリの接続に必要です。
                    </div>
                    <div class="message-body">
                        @Model.StreamerUrl
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>
